<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/all_resource_listitem_layout"
	android:background="@color/list_back"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:descendantFocusability="blocksDescendants" >
	<LinearLayout 
	    android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
	    >
	    <TextView
		    android:layout_width="wrap_content" android:layout_height="wrap_content"
		    android:id="@+id/resourceName" android:text="http://06peng.com"
		    android:textColor="#000000" android:textSize="24sp"
		    >
		</TextView>
		<TextView
		    android:layout_width="wrap_content" android:layout_height="wrap_content"
		    android:id="@+id/resourceDescribe" android:text=" "
		    >
		</TextView>
	</LinearLayout>
	<TextView
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/username" android:text="" android:layout_alignParentRight="true"
		android:layout_centerVertical="true" android:layout_marginRight="10dp"
	    >
	</TextView>
</RelativeLayout>
